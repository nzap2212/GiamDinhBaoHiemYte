<UserControl x:Class="GĐBHYT.UI.Components.SlideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GĐBHYT.UI.Components"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto">
            <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}"
                             Grid.Row="0">
            <StackPanel>
                <Expander HorizontalAlignment="Stretch"
                          Foreground="#fff">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="HospitalBuilding"
                                                     VerticalAlignment="Center" />
                            <TextBlock Padding="5 0 0 0"
                                       FontSize="16">
                                Giám định 130
                            </TextBlock>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                                Margin="50 0 0 0">
                        <StackPanel x:Name="btnQuanLyHoSo130" 
                                    Orientation="Horizontal" 
                                    Background="Transparent"
                                    MouseLeftButtonDown="NavigationItem_Click"
                                    Tag="QuanLyHoSo130"
                                    Style="{StaticResource NavItemStyle}">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Quản lý hồ sơ 130" />
                        </StackPanel>
                        <StackPanel x:Name="btnCapNhatHoSo130" 
                                    Orientation="Horizontal"
                                    Background="Transparent"
                                    MouseLeftButtonDown="NavigationItem_Click"
                                    Tag="CapNhatHoSo130"
                                    Style="{StaticResource NavItemStyle}">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Cập nhật hồ sơ 130" />
                        </StackPanel>
                        <StackPanel x:Name="btnTheoDoi130NoiTru" 
                                    Orientation="Horizontal"
                                    Background="Transparent"
                                    MouseLeftButtonDown="NavigationItem_Click"
                                    Tag="TheoDoi130NoiTru"
                                    Style="{StaticResource NavItemStyle}">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Theo dõi bệnh nhân nội trú" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <Expander HorizontalAlignment="Stretch"
                          Foreground="#fff">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewList"
                                                     VerticalAlignment="Center" />
                            <TextBlock Padding="5 0 0 0"
                                       FontSize="16">
                                Danh mục
                            </TextBlock>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                                Margin="50 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Thuốc" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Vật tư y tế" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Dịch vụ" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Dịch vụ thủ công" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Trang thiết bị" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Danh mục nhân viên" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Danh mục lỗi" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Danh mục khoa" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <Expander HorizontalAlignment="Stretch"
                          Foreground="#fff">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SettingsOutline"
                                                     VerticalAlignment="Center" />
                            <TextBlock Padding="5 0 0 0"
                                       FontSize="16">
                                Quy trình kỹ thuật
                            </TextBlock>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                                Margin="50 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Hướng dẫn sử dụng thuốc" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       Padding="10"
                                       FontSize="14"
                                       Text="Hướng dẫn sử dụng dịch vụ" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <Expander HorizontalAlignment="Stretch"
                          Foreground="#fff">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="UserGroup"
                                                     VerticalAlignment="Center" />
                            <TextBlock Padding="5 0 0 0"
                                       FontSize="16">
                            Quản trị hệ thống
                            </TextBlock>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Orientation="Vertical"
                                Margin="50 0 0 0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       FontSize="14"
                                       Padding="10"
                                       Text="Quản lý người dùng" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowRightDropCircle"
                                                     VerticalAlignment="Center" />
                            <TextBlock Foreground="#fff"
                                       FontSize="14"
                                       Padding="10"
                                       Text="Quản lý bệnh viện" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Height="50"
                        Foreground="White"
                        FontWeight="Normal"
                        HorizontalContentAlignment="Left"
                        Padding="24,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartLine" />
                            <TextBlock Padding="5 0 0 0"
                                       FontSize="15">
                                Thống kê hồ sơ bệnh viện
                            </TextBlock>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Height="50"
                        Foreground="White"
                        FontWeight="Normal"
                        HorizontalContentAlignment="Left"
                        Padding="24,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartLine" />
                            <TextBlock Padding="5 0 0 0"
                                       FontSize="15">
                                Báo cáo thông kê
                            </TextBlock>
                        </StackPanel>
                    </Button.Content>
                </Button>

            </StackPanel>
        </materialDesign:Card>
        </ScrollViewer>

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   FontSize="12"
                   Margin="10,20,10,10"
                   Text="© 2025 ZigiSoft. All rights reserved." />

    </Grid>
</UserControl>

<UserControl x:Class="GĐBHYT.UI.Components.ReportInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:packIcon="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border CornerRadius="15"
            Background="White"
            BorderBrush="Gray"
            BorderThickness="1"
            MaxWidth="350">
        <Grid Height="160"
              HorizontalAlignment="Stretch"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Khu vực thông tin -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Trong ngày: "
                       FontSize="17"
                       VerticalAlignment="Center"
                       Padding="20 0 0 0" />
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Trong tháng: "
                       FontSize="17"
                       VerticalAlignment="Center"
                       Padding="20 0 0 0" />
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Bảo hiểm y tế: "
                       FontSize="17"
                       VerticalAlignment="Center"
                       Padding="20 0 0 0" />

                <!-- Binding giá trị -->
                <Label Grid.Row="0"
                       Grid.Column="1"
                       Content="0"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Padding="0 0 10 0" />
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Content="0"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Padding="0 0 10 0" />
                <Label Grid.Row="2"
                       Grid.Column="1"
                       Content="0"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Padding="0 0 10 0" />
            </Grid>

            <!-- Bo tròn góc dưới -->
            <Border Grid.Row="1"
                    CornerRadius="0,0,15,15"
                    Background="{Binding FooterColor, FallbackValue=#2093d1}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Tổng số hồ sơ"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalContentAlignment="Center"
                           Padding="20 0 20 0" />
                    <packIcon:PackIcon Grid.Column="1"
                                       Kind="{Binding Icon}"
                                       Width="40"
                                       Height="40"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="0 0 10 0" />
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
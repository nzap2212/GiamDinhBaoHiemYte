<Window x:Class="GĐBHYT.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Components="clr-namespace:GĐBHYT.UI.Components"
        xmlns:Page="clr-namespace:GĐBHYT.UI.Pages"
        xmlns:local="clr-namespace:GĐBHYT.UI"
        mc:Ignorable="d"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Title="Giám định bảo hiểm y tế"
        Icon="/Assets/Logo/MainIcon.ico"
        Height="720"
        Width="1440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- logo -->
            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                    Width="auto"
                    Height="60"
                    Background="#1d2939"
                    BorderThickness="0">

                <Image Source="/Assets/Logo/MainLogo.png" />
            </Button>

            <!-- slideBar -->
            <Components:SlideBar x:Name="sideBar"
                                 Grid.Row="1"
                                 Background="#1d2939" />
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Components:Header x:Name="header" Background="#1d2939" />

            <!-- Page -->
            <ContentControl x:Name="contentFrame" Grid.Row="1"/>
        </Grid>

    </Grid>

</Window>

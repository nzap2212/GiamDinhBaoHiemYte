<UserControl x:Class="GĐBHYT.UI.Pages.mainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GĐBHYT.UI.Pages"
             mc:Ignorable="d" 
             xmlns:packIcon="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Components="clr-namespace:GĐBHYT.UI.Components">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ReportInfo Section -->
        <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Components:ReportInfo Grid.Column="0" Margin="10" HorizontalAlignment="Stretch"/>
            <Components:ReportInfo Grid.Column="1" Margin="10" HorizontalAlignment="Stretch"/>
            <Components:ReportInfo Grid.Column="2" Margin="10" HorizontalAlignment="Stretch"/>
            <Components:ReportInfo Grid.Column="3" Margin="10" HorizontalAlignment="Stretch"/>
        </Grid>
        
        <!-- Chart -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Components:LineChart Grid.Column="0" HorizontalAlignment="Stretch" Margin="10"/>
            <Components:LineChart Grid.Column="1" HorizontalAlignment="Stretch" Margin="10"/>
        </Grid>
    </Grid>
</UserControl>
